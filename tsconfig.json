{
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"esnext",
			"esnext.asynciterable",
			"dom"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			]
		},
		"types": [
			"@types/node",
			"@nuxt/types"
		]
	},
	"include": [
		"assets/",
		"components",
		"layouts",
		"middleware",
		"pages",
		"plugins",
		"store",
		"test",
		".babelrc.js",
		".eslintrc.js",
		"jest.config.js",
		"nuxt.config.ts",
		"stylelint.config.js"
	],
	"exclude": [
		"node_modules/"
	]
}
